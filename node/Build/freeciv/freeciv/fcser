BUILDDIR=`dirname $0`
EXENAME=freeciv-server

if test "x$FREECIV_DATA_PATH" = "x" ; then
  if test "x$FREECIV_PATH" = "x" ; then
    FREECIV_DATA_PATH=".:data:~/.freeciv/dev"
  else
    FREECIV_DATA_PATH="${FREECIV_PATH}"
  fi
fi
FREECIV_DATA_PATH="${FREECIV_DATA_PATH}:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv/data:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv/data"
export FREECIV_DATA_PATH

if test "x$FREECIV_PATH" = "x" ; then
  FREECIV_PATH=".:data:~/.freeciv:~/.freeciv/dev"
fi
FREECIV_PATH="${FREECIV_PATH}:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv"
export FREECIV_PATH

if test "x$FREECIV_SAVE_PATH" = "x" ; then
  FREECIV_SAVE_PATH=".:~/.freeciv/saves"
fi
FREECIV_SAVE_PATH="${FREECIV_SAVE_PATH}:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv"
export FREECIV_SAVE_PATH

if test "x$FREECIV_SCENARIO_PATH" = "x" ; then
  FREECIV_SCENARIO_PATH=".:data/scenarios:~/.freeciv/dev/scenarios:~/.freeciv/scenarios"
fi
FREECIV_SCENARIO_PATH="${FREECIV_SCENARIO_PATH}:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv/data/scenarios:/home/lui/freecivWeb/freeciv-web/freeciv/freeciv/data/scenarios"
export FREECIV_SCENARIO_PATH

[ -x $BUILDDIR/server/$EXENAME ] && EXE=$BUILDDIR/server/$EXENAME
[ -x $BUILDDIR/$EXENAME ] && EXE=$BUILDDIR/$EXENAME

if [ "$EXE" = "" ]; then
  echo $0: Unable to find $EXENAME.
  exit 1
fi

exec $EXE ${1+"$@"}
